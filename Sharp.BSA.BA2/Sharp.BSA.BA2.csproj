<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <OutputType>Library</OutputType>
    <RootNamespace>SharpBSABA2</RootNamespace>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>Sharp.BSA.BA2</PackageId>
    
    <Authors>p1x</Authors>
    <PackageProjectUrl>https://github.com/p1x/BSA_Browser</PackageProjectUrl>
    <PackageLicenseUrl>https://github.com/p1x/BSA_Browser/blob/master/LICENSE</PackageLicenseUrl>
    <RepositoryUrl>https://github.com/p1x/BSA_Browser.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>ba2 bsa</PackageTags>
    <Version>1.17.0</Version>
    <Description>Library for BSA and BA2 archives.</Description>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
    <LangVersion>8</LangVersion>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="K4os.Compression.LZ4" Version="1.3.7-beta" />
    <PackageReference Include="K4os.Compression.LZ4.Streams" Version="1.3.7-beta" />
    <PackageReference Include="SharpZipLib" Version="1.3.3" />
    <PackageReference Include="System.Buffers" Version="4.5.1" />
  </ItemGroup>
  <ItemGroup>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>
</Project>